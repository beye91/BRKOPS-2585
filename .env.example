# BRKOPS-2585 Environment Configuration
# Copy to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=brkops2585
POSTGRES_USER=brkops
POSTGRES_PASSWORD=changeme_secure_password

# =============================================================================
# REDIS
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# BACKEND
# =============================================================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
SECRET_KEY=changeme_generate_a_secure_key_here
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# FRONTEND
# =============================================================================
NEXT_PUBLIC_API_URL=http://backend:8000
NEXT_PUBLIC_WS_URL=ws://backend:8000

# =============================================================================
# LLM PROVIDERS
# =============================================================================
# Primary: OpenAI GPT-4
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# Fallback: Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# LLM Settings
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096
LLM_TIMEOUT=30

# =============================================================================
# MCP SERVERS (External)
# =============================================================================
# CML MCP Server
CML_MCP_URL=http://cml-mcp-server:8080
CML_HOST=https://your-cml-instance.example.com
CML_USERNAME=admin
CML_PASSWORD=changeme

# Splunk MCP Server
SPLUNK_MCP_URL=http://splunk-mcp-server:8080
SPLUNK_HOST=https://your-splunk-instance.example.com
SPLUNK_TOKEN=your-splunk-hec-token

# =============================================================================
# NOTIFICATIONS
# =============================================================================
# WebEx
WEBEX_WEBHOOK_URL=https://webexapis.com/v1/webhooks/incoming/your-webhook-id
WEBEX_BOT_TOKEN=your-webex-bot-token

# ServiceNow
SERVICENOW_INSTANCE=your-instance.service-now.com
SERVICENOW_USERNAME=admin
SERVICENOW_PASSWORD=changeme

# =============================================================================
# VOICE (Whisper)
